@using ProyectoMVC_AlexiaSabate.Models.ViewModels
@model AnimalViewModel

<h1>Lista de Animales</h1>

<ul>
    @foreach (var animal in Model.Animales)
    {
        <li>
            <span class="animal-id">ID: @animal.IdAnimal</span> @animal.TipoDeAnimal.TipoDescripcion
            <form asp-action="AnimalDetail" asp-controller="Home" method="post" style="display:inline;">
                <input type="hidden" name="id" value="@animal.IdAnimal" />
                <button type="submit">Ver Detalles</button>
            </form>
        </li>
    }
</ul>
<ul>
    <form asp-action="AnimalInsert" asp-controller="Home" method="post" style="display:inline;">
        <button type="submit">Añadir</button>
    </form>
</ul>